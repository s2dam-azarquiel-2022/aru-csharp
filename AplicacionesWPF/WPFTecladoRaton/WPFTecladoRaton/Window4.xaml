<Window x:Class="WPFTecladoRaton.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTecladoRaton"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800" >
    <Canvas>
        <Ellipse Canvas.Left="50" Canvas.Top="50" Height="100"
                 Width="100" Fill="#FF0000"
                 MouseMove="Elipse_MouseMove"/>
        <Rectangle
            Height="100" Width="100" Canvas.Left="400"
            Canvas.Top="280" Stroke="#000000"
            Fill="#00FF00" StrokeThickness="3"
            AllowDrop="True" Drop="Rectangle_Drop" />
 </Canvas>
</Window>
