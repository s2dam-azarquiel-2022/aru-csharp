<Window x:Class="WPFControlesSeleccion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFControlesSeleccion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Windows">
                <MenuItem Header="ListView" Click="MenuItem_Click_ListView"/>
                <MenuItem Header="TreeView" Click="MenuItem_Click_TreeView"/>
            </MenuItem>
            <MenuItem Header="End" Click="MenuItem_Click_End"/>
        </Menu>
    </DockPanel>
</Window>
